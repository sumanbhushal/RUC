<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEFFCE"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ruc.bhushalsuman.ruc.LoginActivity"
    tools:showIn="@layout/activity_login">

    <ImageView
        android:id="@+id/tvLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/login"
        android:textColor="#2E9B00" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvLoginTitle"
        android:layout_marginTop="47dp"
        android:text="Username"
        android:textColor="#2E9B00"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvUsername"
        android:layout_marginTop="44dp"
        android:text="Password"
        android:textColor="#2E9B00"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/etPassword"
        android:layout_toEndOf="@+id/tvUsername" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPassword"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#2E9B00"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/etPassword"
        android:typeface="serif"
        android:textSize="15dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
