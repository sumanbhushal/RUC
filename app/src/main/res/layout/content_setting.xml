<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#CEFFCE"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ruc.bhushalsuman.ruc.SettingActivity"
    tools:showIn="@layout/activity_setting">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Turn On/Off the Notification :"
        android:id="@+id/tv_settingTitle"
        android:textSize="15dp"
        android:textColor="#2E9B00"
        android:typeface="serif"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On/OFF"
        android:id="@+id/tBNotification"
        android:checked="false"
        android:background="#2E9B00"
        android:textColor="#FFFFFF"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
